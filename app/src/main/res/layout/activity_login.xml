<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@drawable/firebasebg"
    android:layout_gravity="center_horizontal"
    tools:context=".Login">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/rancho"
        android:gravity="center_horizontal"
        android:text="Login"
        android:textSize="56dp" />
    <EditText
        android:id = "@+id/login_email"
        android:layout_width = "match_parent"
        android:hint="Username"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:drawableStart="@drawable/user"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height = "wrap_content"
        android:background="@drawable/login_signup_btn"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <EditText
            android:id = "@+id/login_password"
            android:layout_margin="20sp"
            android:hint="Password"
            android:padding="10dp"
            app:passwordToggleEnabled="true"
            android:drawableStart="@drawable/password"
            android:drawablePadding="20dp"
            android:inputType = "textPassword"
            android:background="@drawable/login_signup_btn"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:fontFamily="@font/tenali_ramakrishna"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="Forgot Password ?"
            android:textSize="26sp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/login_recoverPassword"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_height="34dp"
            android:fontFamily="@font/tenali_ramakrishna"
            android:textSize="26sp"
            android:gravity="center_horizontal"
            android:text="Recover" />
    </LinearLayout>





    <Button
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
       android:background="@drawable/login_btn"
        android:fontFamily="@font/rancho"
        android:text="Log In"
        android:id="@+id/login_loginbtn"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="40sp"></Button>
      <com.google.android.gms.common.SignInButton
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
          app:buttonSize="wide"
          app:colorScheme="dark"
        android:fontFamily="@font/rancho"
        android:textAllCaps="false"
        android:id="@+id/login_withgoogle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="120dp"
        >

        <TextView
            android:layout_width="250dp"
            android:layout_height="34dp"
            android:fontFamily="@font/tenali_ramakrishna"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="Don't have an account ?"
            android:textSize="26sp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/login_logintoregisterredirect"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_height="34dp"
            android:fontFamily="@font/tenali_ramakrishna"
            android:textSize="26sp"
            android:gravity="center_horizontal"
            android:text="SignUp" />
    </LinearLayout>


</LinearLayout>